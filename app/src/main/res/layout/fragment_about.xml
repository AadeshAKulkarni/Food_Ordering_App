<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000"
        android:text="Sattvic foods are foods that are abundant in Prana- the universal life-force that gives life to all sentient beings in both plant and animal kingdoms. a Sattvic diet means not only vegetarian food, but food rich in Prana 'life-force like organic fresh fruits and vegetables."
        android:textAlignment="center"
        android:layout_gravity="fill" />


    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="12sp"
        android:textColor="#000"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    <TextView
        android:text="Shop 1, 2A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView6"
        android:textSize="12sp"
        android:textColor="#000"

        android:textStyle="normal|bold"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Vrindavan Bus Stop, Thane West"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="12sp"
        android:textColor="#000"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="We serve only in Majiwada area in Thane West"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000"
        android:id="@+id/textView2"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:text="Contact:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000"

        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="9757247020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000"
        android:layout_marginTop="10sp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView6" />


</RelativeLayout>
